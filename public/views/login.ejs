        var upparcase = new RegExp('[A-Z]');
        var number = new RegExp('[0-9]');
        var opass = $("#opass");

        $("#password").keyup(function () {
            var fpassword = $(this).html()
            var Password = $(this).val()


            if (Password.match(upparcase)) {
                $(".letter").css("display", "none");

                $("#correct_letter").css("display", "block");
                $("#wrong_letter").css("display", "none")
            } else {
                $(".letter_con").css("color", "red");
                $("#correct_letter").css("display", "none");
                $("#wrong_letter").css("display", "block");

            }



            if (Password.match(number)) {
                $(".number").css("display", "none");

                $("#correct_number").css("display", "block");
                $("#wrong_number").css("display", "none")
            } else {
                $(".number_con").css("color", "red");
                $("#correct_number").css("display", "none");
                $("#wrong_number").css("display", "block");

            }



            if (Password.length < 8) {
                $(".char_con").css("color", "red");
                $("#correct_char").css("display", "none");
                $("#wrong_char").css("display", "block");
            } else {

                if (Password.length = 8) {
                    $(".charactors").css("display", "none");

                  

                }else{
                    if(password.length >= 8)
                    $(".charactors").css("display", "block");

                    $(".char_con").css("color", "red","display","block");
                    $("#correct_char").css("display", "none");
                    $("#wrong_char").css("display", "block");
                }


            }














        });


        var old_password = $("#password")
        $("#show").click(function () {
            if (old_password.prop('type') == "password") {
                $(this).addClass("fa-eye-slash");
                old_password.attr("type", "text")
            } else {
                $(this).removeClass("fa-eye-slash");
                old_password.attr("type", "password")

            }
        });
