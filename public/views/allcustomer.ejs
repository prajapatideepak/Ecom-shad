                                        </td>
                                        <td class="w-[200PX] h-[40px] text-center">
                                            <%= data[i].inumber %>
                                        </td>
                                        <td class="w-[200PX] h-[40px] text-center">
                                            <%= data[i].moname %>
                                        </td>
                                        <td class="w-[200PX] h-[40px] text-center">
                                            <%= data[i].pamount %>
                                        </td>
                                        <td class="w-[200PX] h-[40px] text-center">
                                            <%= data[i].finalamount %>
                                        </td>
                                        <td class="w-[200PX] h-[40px] text-center">
                                            <%= data[i].fdown %>
                                        </td>
                                        <td class="w-[200PX] h-[40px] text-center">5000</td>
