    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>

        function showmenu() {
            $('#menu').css({ "left": "0", "width": "270px" });
        }
        $('document').ready(function () {

            $('#close-btn').click(function () {
                $('#menu').css("left", "-272px");
            })

        })

        function MyFunction() {
            var dropcontent = document.querySelector('.drop-content');
            dropcontent.classList.toggle('dropdown-toggle');
        }


        function add(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: " Are You Want one more product!!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Confirm'
            }).then((result) => {
                if (result.isConfirmed) {


                  window.location = "/add/"+id;
                }
            })
        }

        function edit(id) {
            Swal.fire({
                 title: 'Are you sure?',
                text: " Are you want edit!!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {


                    window.location = "/edit/"+id;
                }
            })
        }





    </script>
